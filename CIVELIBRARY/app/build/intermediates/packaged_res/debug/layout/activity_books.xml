<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/books_activity"
    tools:context=".BooksActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E98C6B"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnback"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:background="#00FFFFFF"
                    android:contentDescription="@string/onpdfbattonback"
                    android:padding="5sp"
                    android:src="@drawable/ic_arrow_back" />

                <TextView
                    android:id="@+id/heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:gravity="center"
                    android:padding="5sp"
                    android:text="@string/app_name"
                    android:textAllCaps="false"
                    android:textColor="#434D94"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btnReflesh"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_marginStart="20sp"
                    android:background="#00FFFFFF"
                    android:contentDescription="@string/onpdfbattonreflesh"
                    android:padding="5sp"
                    android:src="@drawable/ic_refresh" />

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pdf_viewer_app"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/black" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ProgressBar
                    android:id="@+id/myprogressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:indeterminate="true"
                    android:indeterminateBehavior="cycle"
                    android:visibility="gone" />

                <GridView
                    android:id="@+id/mygridView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="16sp"
                    android:layout_marginEnd="16sp"
                    android:layout_weight="0.5"
                    android:numColumns="auto_fit" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>